<?xml version="1.0" encoding="UTF-8"?>
<project name="ion/dev-package-build-wordpress" default="info" phingVersion="2.16.3">    
    
    <property name="config.wordpress.entry-file" value="index.php" />
    
    <property file="vendor/ion/dev/source/package-build-wordpress.properties"/>
    
    <!-- ===========================================
        Target: prepare-package
    ============================================ -->  
      
    <target name="prepare-package" depends="check-version">         
          
        <echo msg="Updating WordPress version..." />
        <exec command="composer vcs version --check=auto --output --prepend &quot;Version: &quot; | composer regex replace &quot;/Version\s*:\s*[0-9]+\.[0-9]+\.[0-9]+\S*/&quot; ${config.wordpress.entry-file} --output=${config.wordpress.entry-file}" passthru="true" />        

    </target>           
    
</project>