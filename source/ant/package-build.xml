        </exec>   -->
        
        <echo msg="Updating the version tag for the release GIT branch '${release-branch}'." />
        <exec executable="${config.pkg.cmd}" dir="." checkreturn="true" passthru="true">
            <arg line="${config.pkg.cmd.update-version}" />
        </exec>        
        
        
    </target>            
    
    
