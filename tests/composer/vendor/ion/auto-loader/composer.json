{
    "name": "ion/auto-loader",
    "type": "library",
    "description": "A small auto-loading library, compatible with Composer, that allows you to customise your auto-loading functionality.",
    "keywords": [
        "PHP",
        "boot strap",
        "bootstrap",
        "autoload",
        "autoload helper"
    ],
    "homepage": "https://bitbucket.org/justusmeyer/auto-loader",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Justus Meyer",
            "role": "developer",
            "homepage": "https://bitbucket.org/justusmeyer/",
            "email": "justus@justusmeyer.com"
        }
    ],
    "support": {
        "issues": "https://bitbucket.org/justusmeyer/auto-loader/issues"
    },
    "suggest": {
        "ion/auto-loader-dev": "Additional build tools that be used along with this library to stream-line your work-flow.",        
        "ion/php-trans-porter": "A PHP command-line utility and class library to convert source code between PHP 5.6+ and the latest version of PHP."        
    },	
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "php": "^7.1.3",
        "phing/phing": "2.*",
        "phpunit/phpunit": "^6.2",
        "ion/php-trans-porter": "^0.0.19",
        "ion/auto-loader-dev": ">=0.0.10"
    },
    "minimum-stability": "dev", 
    "autoload": {
        "files": [
            "bootstrap.php"
        ]
    }
}
