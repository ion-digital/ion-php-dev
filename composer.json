{
    "name": "ion/dev",
    "type": "composer-plugin",
    "description": "Development and package deployment support tools, built as a Composer plugin.",
    "keywords": [
        "ION",
        "composer",
        "development tools"
    ],
    "homepage": "https://github.com/ion-digital/ion-php-dev",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Justus Meyer",
            "role": "developer",
            "homepage": "https://justusmeyer.com"
        },
        {
            "name": "ION Digital",
            "role": "owner",
            "homepage": "https://ion.digital"
        }        
    ],
    "require": {
        "php": ">=7.2",
        "ext-curl": "*",
        "composer-plugin-api": "^2.0",
        "phpunit/phpunit": "^10.4",
        "phing/phing": "^2.17",
        "nikic/php-parser": "^4.15",
        "ion/php-trans-porter": "^0.1",
        "kint-php/kint": "^5"
    },
    "autoload": {
        "psr-4": {
            "ion\\": [ "source/classes/ion/", "source/interfaces/ion/", "source/traits/ion/" ]
        }    
    },
    "autoload-dev": {
        "psr-4": {
            "ion\\": ["tests/unit/ion/"]
        }    
    },    
    "extra": {
        "class": "ion\\Dev\\Composer\\DevPlugin"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
